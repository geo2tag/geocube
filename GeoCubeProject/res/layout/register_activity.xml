<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#5607a2">
    <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Register"
            android:id="@+id/reisterText" android:layout_gravity="center"
            android:linksClickable="true"
            android:textStyle="bold|italic" android:textSize="20sp"
            android:textColor="#bd96ff" android:layout_marginLeft="10dp" android:layout_marginRight="27dp"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical" android:columnCount="2"
            android:rowCount="3">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Login: "
                android:id="@+id/login" android:layout_row="0" android:layout_column="0"
                android:layout_margin="5dp"
                />
        <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/loginText" android:layout_row="0" android:layout_column="1"
                android:layout_margin="5dp" android:hint="login"
                android:singleLine="true"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Password: "
                android:id="@+id/textView1" android:layout_row="1" android:layout_column="0"
                android:layout_margin="5dp"/>
        <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/passText" android:layout_row="1" android:layout_column="1"
                android:layout_margin="5dp" android:hint="password"
                android:singleLine="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="E-mail:"
                android:id="@+id/textView2" android:layout_row="2" android:layout_column="0"
                android:layout_margin="5dp"/>
        <EditText
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:id="@+id/emailText" android:layout_row="2" android:layout_column="1"
                android:layout_margin="5dp" android:focusable="true" android:hint="email"
                android:singleLine="true"/>
    </GridLayout>
    <Button
            android:layout_width="126dp"
            android:layout_height="50dp"
            android:text="Register"
            android:id="@+id/registerButton"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/my_button"/>


</LinearLayout>