<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#5607a2">

    <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:text="Log in"
            android:id="@+id/loginTextView" android:layout_gravity="center"
            android:linksClickable="true"
            android:textStyle="bold|italic" android:textSize="20sp" android:layout_margin="10dp"
            android:textColor="#bd96ff"/>
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:columnCount="2" android:rowCount="2"
            android:layout_margin="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:text="Login:"
                android:id="@+id/login" android:layout_row="0" android:layout_column="0"
                android:layout_margin="5dp" android:textIsSelectable="true"/>
        <EditText
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:id="@+id/loginText" android:layout_row="0" android:layout_column="1"
                android:layout_margin="5dp" android:hint="login"
                android:singleLine="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Password: "
                android:id="@+id/pass" android:layout_row="1" android:layout_column="0"
                android:layout_margin="5dp" android:singleLine="false"/>
        <EditText
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:id="@+id/passText" android:layout_row="1" android:layout_column="1"
                android:layout_margin="5dp" android:password="true" android:hint="password"
                android:singleLine="true"/>
    </GridLayout>
    <Button
            android:layout_width="113dp"
            android:layout_height="50dp"
            android:text="Login"
            android:id="@+id/loginButton" android:layout_gravity="center"
            android:layout_margin="20dp" android:padding="10dp"
            android:background="@drawable/my_button"/>
</LinearLayout>